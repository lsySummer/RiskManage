<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
<package name="struts2" extends="struts-default">
		<action name="login" class="LoginAction" method="login">
			<result name="success">/jsp/addRisk.jsp</result>
			<result name="error">/jsp/error.jsp</result>
		</action>
		
		<action name="register" class="registerAction" method="register">
			<result name="success">/jsp/addRisk.jsp</result>
			<result name="error">/jsp/error.jsp</result>
		</action>
		
		<action name="addRisk" class="riskAction" method="add">
			<result name="success">/jsp/followState.jsp</result>
			<result name="error">/jsp/error.jsp</result>
		</action>
		
		<action name="toRisk" class="toRiskAction" method="toRisk">
			<result name="success">/jsp/addRisk.jsp</result>
			<result name="error">/jsp/error.jsp</result>
		</action>
		
		<action name="toState" class="toStateAction" method="toState">
			<result name="success">/jsp/followState.jsp</result>
			<result name="error">/jsp/error.jsp</result>
		</action>
		
		<action name="showState" class="showStateAction" method="showState">
			<result name="success">/jsp/addState.jsp</result>
			<result name="error">/jsp/error.jsp</result>
		</action>
		
		<action name="addState" class="addStateAction" method="addState">
			<result name="success">/jsp/addState.jsp</result>
			<result name="error">/jsp/error.jsp</result>
		</action>
		
		<action name="riskType" class="riskTypeAction" method="riskType">
			<result name="success">/jsp/followState.jsp</result>
			<result name="error">/jsp/error.jsp</result>
		</action>
	</package>

</struts>

